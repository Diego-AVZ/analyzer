{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "regions": ["lhr1"],
  "builds": [
    {
      "src": "backend-server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/backend-server.js"
    }
  ]
}
